{
  "name": "Imgur Image Uploader",
  "description": "An app to share images using the imgur service",
  "launch_path": "/index.html",
  "type": "privileged",
  "activities": {
      "share": {
            "href": "./index.html",
            "disposition": "inline",
            "filters": {
              "type": ["image/*","image/jpeg","image/png"]
            },
            "returnValue": true
          }
  },
  "permissions": {
      "desktop-notification": {
          "description" : "To show notifications"
      }
  },
  "icons": {
    "128": "/icons/logo_128.png",
    "60": "/icons/logo_60.png"
  },
  "developer": {
    "name": "Andre Garzia",
    "url": "http://andregarzia.com"
  },
  "default_locale": "en",
  "permissions": {
      "systemXHR": {
        "description": "Used to send data to Foursquare API."
      },
      "browser": {
        "description": "Enables authentication to Foursquare via OAuth."
      }
    }

}
